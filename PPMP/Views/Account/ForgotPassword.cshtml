@model ForgotPasswordModel

@{
    ViewData["Title"] = "ForgotPassword";
}
<link rel="stylesheet" href="~/css/Login.css" />

<section class="w-full h-full flex justify-center items-center " >
    <div class="h-full w-[25%]  min-w-[23rem] max-w-[25rem] min-h-[30%] max-h-[75%] gap-[2.3rem] flex justify-start items-start flex-col  p-2 ">
        <div class="w-full h-auto flex flex-col justify-center items-center">
            <h2 class="w-full items-start justify-start flex text-[45px] font-[500] tracking-normal " > Request Password Reset </h2>
        </div>
     
        <form asp-route="PasswordRequest" method="post" class=" gap-5 text-1xl w-full h-auto flex flex-col justify-center items-center  font-thin">
            <!-- Hidden returnUrl so callback redirects correctly -->
            <div class = "w-full h-auto flex flex-col gap-1 justify-start items-start">
            <label asp-for="Email" class="w-full h-auto"></label>
                <div class="relative w-full h-auto">
                    @if(ViewData["IsEmailNull"] != null && (bool)ViewData["IsEmailNull"] != true)
                    {
                        <input asp-for="Email" placeholder="Enter Email" value="@ViewData["Email"]"  class=" placeholder:text-[#817d7dca] pl-[43px] not-visited:bg-[#c7c4c417] icon-input h-auto w-full text1x1 p-2 shadow-[0_0_2px_0_rgb(0_0_0/0.05)]/20 rounded-lg transition-all duration-200 hover:outline-0  focus-visible:outline-0 focus-visible:shadow-[0_0_3px_1px_rgb(0_0_0/0.05)]/20" />
                    }
                    else
                    {
                        <input asp-for="Email" placeholder="Enter Email" value="@ViewData["Email"]"  class=" placeholder:text-[#817d7dca] pl-[43px] not-visited:bg-[#c7c4c417] icon-input h-auto w-full text1x1 p-2 shadow-[0_0_2px_0_rgb(0_0_0/0.05)]/20 rounded-lg transition-all duration-200 hover:outline-0  focus-visible:outline-0 focus-visible:shadow-[0_0_3px_1px_rgb(0_0_0/0.05)]/20" />                 
                    }
                    
                    <img src="~/images/mail.svg" alt="", class=" w-[20px] h-[20px] absolute left-[10px] top-1/2 transform-[translateY(-50%)] pointer-events-none">
                </div>
                <span asp-validation-for="Email" class="w-full h-auto text-[15px] font-thin p-0 text-red-600"></span>
            </div>

          
            <div class="text-danger w-full h-auto text-[15px] font-thin p-0 self-start text-red-600 flex flex-row items-center justify-between">
                @if (!ViewData.ModelState.IsValid)
                {
                    @Html.ValidationSummary()
                }
            </div>

            <button class="w-full h-[3rem] rounded-lg
                bg-blue-700 flex justify-center items-center text-[15px]
                text-white hover:bg-[#155efce7] hover:cursor-pointer" type="submit">
                Send Reset Link
             </button>
        </form>
    </div>
</section>

<script>
    $("#Email").on("focus", function () {
        $(this).data("placeholder", $(this).attr("placeholder"));
        $(this).attr("placeholder", "");
    });

    $("#Email").on("blur", function () {
        $(this).attr("placeholder", $(this).data("placeholder"));
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
