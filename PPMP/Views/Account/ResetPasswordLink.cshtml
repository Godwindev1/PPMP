@{
    ViewData["Title"] = "Password Reset Link Sent";
    Layout = "_Layout";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="max-w-md w-full bg-white rounded-lg shadow-sm p-8 text-center">

        <h1 class="text-2xl font-semibold text-gray-900 mb-4">
            Password Reset Link Sent
        </h1>

        <p class="text-gray-600 mb-6">
            a password reset link has been sent.
            Please check your inbox and follow the link to reset
            your password.
        </p>

        <p class="text-sm text-gray-500 mb-6">
            For security reasons, the link will expire after a 10 minutes.
        </p>

        <a asp-controller="Account"
           asp-action="ForgotPassword"
           class="inline-block w-full bg-blue-600 text-white font-medium py-2 px-4 rounded-md hover:bg-blue-700 transition">
            Resend Link
        </a>

        <div class="mt-6 text-sm text-gray-500">
            <a asp-controller="Account"
               asp-action="Login"
               class="hover:underline">
                Return to login
            </a>
        </div>

    </div>
</div>
