@{
    ViewData["Title"] = "Password Reset Successful";
    Layout = "_Layout";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="max-w-md w-full bg-white rounded-lg shadow-sm p-8 text-center">

        <h1 class="text-2xl font-semibold text-gray-900 mb-4">
            Password Reset Successful
        </h1>

        <p class="text-gray-600 mb-6">
            Your password has been updated successfully.
            You can now sign in using your new password.
        </p>

        <a asp-controller="Account"
           asp-action="Login"
           class="inline-block w-full bg-green-600 text-white font-medium py-2 px-4 rounded-md hover:bg-green-700 transition">
            Continue to Login
        </a>

    </div>
</div>
