@model PPMP.Models.CreateClientModel

<link href="~/css/Dashboard/developer.css" rel="stylesheet">

<!-- Modal Overlay -->
<div class="modal-grow fixed inset-0 bg-transparent bg-opacity-50 flex items-center justify-center z-50 hidden bg-blur" id="ClientFormModal">
    <div class="bg-white rounded-xl shadow-2xl w-full max-w-2xl max-h-[90vh] overflow-y-auto">
        @using (Html.BeginForm("CreateClient", "Admin", FormMethod.Post, new { id = "createClientForm" }))
        {
            @Html.AntiForgeryToken()

            <!-- Modal Header -->
            <div class="px-8 py-7 border-b border-gray-200 relative">
                <h2 class="text-2xl font-semibold text-gray-900 mb-2">Create client</h2>
                <p class="text-gray-600 text-[15px]">Create a client profile and define the contract period</p>
                <button type="button"
                    class="absolute top-6 right-6 w-8 h-8 flex items-center justify-center text-gray-500 hover:bg-gray-100 rounded-md transition-colors text-2xl"
                    onclick="closeClientModal()">Ã—</button>
            </div>

            <!-- Modal Body -->
            <div class="px-8 py-8">
                <h3 class="text-lg font-semibold text-gray-900 mb-6">Basic details</h3>

                <!-- Client Name -->
                <div class="mb-6">
                    @Html.LabelFor(m => m.Name, "Client name", new { @class = "block text-sm font-medium text-gray-700 mb-2" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "w-full px-3.5 py-2.5 text-[15px] border border-gray-300 rounded-lg focus:outline-none transition-all", placeholder = "Acme Corporation" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-red-500 text-sm mt-1" })
                </div>

                <!-- Date Row -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                    <!-- Start Date -->
                    <div class="mb-6">
                        @Html.LabelFor(m => m.StartDate, "Start date", new { @class = "block text-sm font-medium text-gray-700 mb-2" })
                        <div class="relative">
                            @Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-dd}", new { @class = "w-full px-3.5 py-2.5 pr-10 text-[15px] border border-gray-300 rounded-lg focus:outline-none  transition-all", type = "date" })
                            <div class="absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none text-base">ðŸ“…</div>
                            @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-red-500 text-sm mt-1" })
                        </div>
                    </div>

                    <!-- End Date -->
                    <div class="mb-6">
                        @Html.LabelFor(m => m.EndDate, "End date", new { @class = "block text-sm font-medium text-gray-700 mb-2" })
                        <div class="relative">
                            @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-dd}", new { @class = "w-full px-3.5 py-2.5 pr-10 text-[15px] border border-gray-300 rounded-lg focus:outline-none transition-all", type = "date" })
                            <div class="absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none text-base">ðŸ“…</div>
                            @Html.ValidationMessageFor(m => m.EndDate, "", new { @class = "text-red-500 text-sm mt-1" })
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal Footer -->
            <div class="px-8 py-5 pb-7 border-t border-gray-200 flex justify-end gap-3">
                <button type="button"
                    class="hover:cursor-pointer px-5 py-2.5 text-[15px] font-medium text-gray-700 bg-white border border-gray-500 rounded-lg hover:bg-gray-100 transition-colors"
                    onclick="closeClientModal()">Cancel</button>
                <button type="submit"
                    class="hover:cursor-pointer px-6 py-2.5 text-[15px] font-medium text-white bg-blue-600 rounded-lg hover:bg-blue-700 transition-colors">Create
                    client</button>
            </div>
        }
    </div>
</div>

<style>
    /* Hide default date picker icon in some browsers */
    input[type="date"]::-webkit-calendar-picker-indicator {
        opacity: 0;
        cursor: pointer;
    }
</style>


